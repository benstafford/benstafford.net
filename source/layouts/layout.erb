  <head>
    <meta charset="utf-8" />
    <meta name="description" content="" />
    <meta name="copyright" content="" />
    <link type="text/plain" rel="author" href="/humans.txt" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <meta http-equiv="cleartype" content="on">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title><%= current_resource.data.title || "Ben Stafford" %></title>

    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.0/css/font-awesome.min.css" media="screen" rel="stylesheet" type="text/css" />
    <%= stylesheet_link_tag "application" %>
    <%= yield_content :stylesheets %>

    <% if content_for? :styles %>
      <style type="text/css">
        <%= yield_content :styles %>
      </style>
    <% end %>

    <%= javascript_include_tag "modernizr" %>

    <%= yield_content :head %>
  </head>
  <body>

    <!-- Logo & Top Nav -->
    <header>
      <div class="row">
        <div class="small-12 columns">
          <a href="/">
            <h1 style="margin-bottom: 5px;">Ben Stafford</h1>
            <h5 style="margin-bottom: 0px;">Random notes, thoughts and musings on technology, programming, and other jobs as assigned</h5>
          </a>
        </div>
      </div>
      <div style="border-bottom:2px solid #000; width: 100%; height: 2px;"></div>
    </header>
    <!-- End Header and Nav -->

    <!-- Main page container -->
    <div class="row">
      <div class="small-9 columns">
        <%= yield %>
      </div>
      <div class="small-3 columns sidebar">
        <aside>
          <ul class="side-nav">
            <li><%= link_to "Home", "/index.html" %></li>
            <li><%= link_to "About Me", "/about.html" %></li>
          </ul>
        </aside>

        <aside>
          Recent Posts
          <br />
          <ul class="side-nav">
            <% blog.articles[0...5].each do |article| %>
              <li><a href="<%= article.url %>"><%= article.title %></a></li>
            <% end %>
          </ul>
        </aside>

        <aside>
          <a width="250px" class="twitter-timeline" href="https://twitter.com/benstafford" data-widget-id="427242911902601216">Tweets by @benstafford</a>
          <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        </aside>
      </div>
    </div>

    <!-- Footer -->
    <footer class="row">
      <div class="small-12 large-6 columns">
        <p>&copy; Copyright <%= Date.today.year.to_s %> Ben Stafford</p>
      </div>
    </footer>

